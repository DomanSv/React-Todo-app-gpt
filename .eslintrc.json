{
	"env": {
		"browser": true,
		"es2021": true
	},
	"globals": {
		"window": true,
		"global": true,
		"module": true,
		"require": true,
		"process": true
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "prettier", "plugin:tailwindcss/recommended"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": "error",
		"react/react-in-jsx-scope": "off",
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
		"react/prop-types": "off",
		"jsx-quotes": ["error", "prefer-single"],
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"semi": ["error", "always"],
		"no-unused-vars": "warn"
	},
	"ignorePatterns": ["./dist/**/*", "./node_modules/**/*"]
}
